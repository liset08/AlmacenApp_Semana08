<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.tecsup.almacenapp.DetailActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="20dp"
android:background="@android:color/white"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/foto_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/nombre_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foto_image"
                android:textSize="18sp"
                android:padding="16dp"
                android:textStyle="bold"
                android:text="Nombre del Producto"/>

            <TextView
                android:id="@+id/detalles_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre_text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:text="Intel Core i7 es una familia de procesadores 4 nÃºcleos de la arquitectura Intel x86-64, lanzados al comercio en 2008."/>

            <TextView
                android:id="@+id/precio_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detalles_text"
                android:padding="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Precio: S/. 200.00"/>

        </RelativeLayout>

    </ScrollView>


